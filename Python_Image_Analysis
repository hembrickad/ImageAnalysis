def histo_avg(l):
    num = len(l)
    l = [sum(i) for i in zip(*l)]
    l = [n / num for n in l]
    print(l)
    visualize(l)

#Stats and Prep
def input(directory):
    for fil in os.listdir(directory):
        if fil.endswith(".BMP"):
            if fil.startswith("para"):
                cells[0].append(directory + fil)
            elif fil.startswith("cyl"):
                cells[1].append(directory + fil)
            elif fil.startswith("super"):
                cells[2].append(directory + fil)
            elif fil.startswith("inter"):
                cells[3].append(directory + fil)
            elif fil.startswith("let"):
                cells[4].append(directory + fil) 
            elif fil.startswith("mod"):
                cells[5].append(directory + fil)
            elif fil.startswith("svar"):
                cells[6].append(directory + fil)

def config(config,image,array):
    if(config['DEFAULT']['pixel_val_color']['run'] == 'True'):
        for x in cells:
            for n in x:
                im_arr = pixel_val_grey(image, config['DEFAULT']['pixel_val_grey']['channel'])
    if(config['OTHER']['pixel_val_color']['run'] == 'True'):
        for x in cells:
            for n in x:
                im_arr = pixel_val_color(image, config['DEFAULT']['pixel_val_color']['channel'])
    if(config['OTHER']['snp']['run'] == 'True'):
        for x in cells:
            for n in x:
                im_arr = snp(im_arr,config['OTHER']['snp']['strength'])
    if(config['OTHER']['gausNoise']['run'] == 'True'):
        for x in cells:
            for n in x:
                im_arr = snp(im_arr,config['OTHER']['gausNoise']['strength'])
    if(config['OTHER']['speckle']['run'] == 'True'):
        for x in cells:
            for n in x:
                im_arr = snp(im_arr,config['OTHER']['speckle']['strength'])
    if(config['OTHER']['histo_equal']['run'] == 'True'):
        pass
    if(config['OTHER']['histo_quant']['run'] == 'True'):
        pass
    if(config['OTHER']['LFilter']['run'] == 'True'):
        pass
